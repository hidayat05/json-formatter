{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "JSON Formatter",
  "version": "0.1.0",
  "identifier": "com.jsonformatter.tool",
  "build": {
    "beforeDevCommand": "cd frontend && python3 -m http.server 1420",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "",
    "frontendDist": "../frontend"
  },
  "app": {
    "windows": [
      {
        "title": "JSON Formatter",
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 400,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon-square.png",
      "icons/icon.png"
    ]
  }
}

